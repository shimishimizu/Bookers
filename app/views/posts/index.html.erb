<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

<h1>Books</h1>
<table>
	<thead>
	    <tr>
		    <th>Title</th>
		    <th>Body</th>
		    <th colspan="3"></th>
	    </tr>
	</thead>

	<tbody>
		<% @posts.each do |post| %>
	        <tr>
	        	<td><%= post.title %></td>
	        	<td><%= post.body %></td>
	        	<td><%= link_to 'Show', post, class: "show_#{post.id}" %></td>
	        	<td><%= link_to 'Edit', edit_post_path(post.id), class: "edit_#{post.id}" %></td>
	        	<td><%= link_to 'Destroy', post, method: :delete, "data-confirm" => "Are you sure?", class: "destroy_#{post.id}" %></td>
	        </tr>
		<% end %>
    </tbody>
</table>

<h2>New book</h2>

<%= form_for(@post) do |f| %>
<div class = "field row">

<%= f.label :title %>
<br>
<%= f.text_field :title, class: "book_title" %>
</div>

<div class = "field row">
<%= f.label :body %>
<br>
<%= f.text_area :body, class: "book_body" %>
</div>

<%= f.submit 'Create Book' %>
<% end %>